    <style name="TransparentMenu" parent="@android:style/Theme.Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="MatchParentWidth">
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="WrapContentWidth">
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="MatchParentWidth.MatchParentHeight" parent="@style/MatchParentWidth">
        <item name="android:layout_height">fill_parent</item>
