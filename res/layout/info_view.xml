<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/infoView"
    android:layout_gravity="center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15.0dip">
    
    <LinearLayout
     android:orientation="horizontal"
     android:layout_gravity="center_horizontal"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/info_filename_lab"
            android:paddingRight="2.0dip"
            android:paddingLeft="5.0dip"
            android:textColor="#ffffffff"
            android:gravity="right"
            android:layout_weight="2.5"
            android:textStyle="bold"
            android:textSize="14.0sp"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"/>
        
        <TextView 
            android:id="@+id/info_filename"
            android:textColor="#ffffffff"
            android:layout_weight="1.0"
            android:gravity="left"
            android:paddingLeft="2.0dip"
            android:textSize="14.0sp"
            android:layout_width="fill_parent"
       		android:layout_height="wrap_content"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TextView 
            android:id="@+id/info_filesize_lab"
            android:textColor="#ffffffff"
            android:paddingRight="2.0dip"
            android:paddingLeft="5.0dip"
            android:layout_weight="2.5"
            android:gravity="right"
            android:textStyle="bold"
            android:textSize="14.0sp"
            android:layout_width="fill_parent"
      	  	android:layout_height="wrap_content"/>
        
        <TextView 
            android:id="@+id/info_filesize"
            android:textColor="#ffffffff"
            android:layout_weight="1.0"
            android:paddingLeft="2.0dip"
            android:textSize="14.0sp"
            android:layout_gravity="center_vertical"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TextView 
            android:id="@+id/info_filenum_lab"
            android:textColor="#ffffffff"
            android:paddingRight="2.0dip"
            android:paddingLeft="5.0dip"
            android:layout_weight="2.5"
            android:gravity="right"
            android:textStyle="bold"
            android:textSize="14.0sp"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"/>
        
        <TextView 
            android:id="@+id/info_filenum"
            android:textColor="#ffffffff"
            android:layout_weight="1.0"
            android:paddingLeft="2.0dip"
            android:textSize="14.0sp"
            android:layout_gravity="center_vertical"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/info_filefullpath_lab" 
            android:paddingRight="2.0dip"
            android:paddingLeft="5.0dip"
            android:layout_weight="2.5"
            android:gravity="right"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:textSize="14.0sp"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"/>
        
        <TextView 
            android:id="@+id/info_filefullpath"            
            android:paddingLeft="2.0dip"
            android:layout_weight="1.0"
            android:textColor="#ffffffff"
            android:textSize="14.0sp"
            android:layout_gravity="center_vertical"
            android:layout_width="fill_parent"
       		android:layout_height="wrap_content"/>
        
    </LinearLayout>    
    
</LinearLayout>