<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_gravity="center_vertical"
    android:padding="40dp" >
    
    <!-- TextView
        
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="#ff313131"
        android:paddingLeft="5.0dip"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textColor="#ffffffff"
        android:textSize="14.0sp"/-->
        
    <TextView
        android:id="@+id/get_opt_input_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Title"
        android:textColor="#ff0000"
        android:textSize="20sp" 
        android:layout_marginTop="0dp"/>    
    
	<include layout="@layout/info_view"/>
    
    <LinearLayout 
        android:id="@+id/opt_yes_no"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:padding="0dp" >
    
	    <TextView
	        android:id="@+id/get_opt_input_yes"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="是"
	        android:textColor="#ff0597d2"
	        android:textSize="16sp" 
	        android:layout_weight="1.0"
	        android:layout_marginTop="0dp"/>
	    
	    <TextView
	        android:id="@+id/get_opt_input_no"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="否"
	        android:textColor="#ff0597d2"
	        android:textSize="16sp" 
	        android:layout_weight="1.0"/>
	    </LinearLayout>

</LinearLayout>